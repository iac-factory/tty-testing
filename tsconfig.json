{
    "extends": "@tsconfig/node16-strictest-esm",
    "ts-node": {
        "preferTsExts": true,
        "experimentalReplAwait": false,
        "skipIgnore": true,
        "experimentalResolverFeatures": true,
        "files": true,
        "transpileOnly": true,
        "swc": true
    },
    "compilerOptions": {
        "rootDir": ".",
        "pretty": true,
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "diagnostics": true,
        "noUnusedLocals": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedParameters": false,
        "downlevelIteration": true,
        "allowUnreachableCode": true,
        "importsNotUsedAsValues": "preserve",
        "exactOptionalPropertyTypes": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSourceMap": false
    },
    "include": [
        "index.ts", "*.ts", "**/*.json"
    ],
    "exclude": [
        "*.d.ts",
        "coverage",
        "node_modules"
    ]
}
